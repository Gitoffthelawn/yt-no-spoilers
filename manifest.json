{

  "description": "Hide everything but the video and description on youtube + twitch",
  "manifest_version": 2,
  "name": "Youtube: Just the video",
  "version": "1.2",
  "homepage_url": "https://github.com/sergeio/yt-no-spoilers",
  "icons": {
    "32": "icons/youtube-on.png"
  },

  "permissions": [
    "*://*.youtube.com/*",
    "*://youtube.com/*",
    "*://*.twitch.tv/*",
    "*://twitch.tv/*",
    "activeTab",
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/youtube-on.png",
    "default_title": "Show/hide spoilers"
  },

  "background": {
    "scripts": ["toggle.js"]
  },

  "web_accessible_resources": [
    "icons/*.png"
  ]

}
