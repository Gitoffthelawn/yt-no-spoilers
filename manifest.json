{

  "description": "Hide everything but the video and description on youtube",
  "manifest_version": 2,
  "name": "Youtube: Just the video",
  "version": "1.0",
  "homepage_url": "https://github.com/sergeio/yt-no-spoilers",

  "permissions": [
    "*://*.youtube.com/*",
    "*://youtube.com/*",
    "activeTab",
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/youtube-on.png",
    "default_title": "Show/hide junk on youtube"
  },

  "background": {
    "scripts": ["toggle.js"]
  },

  "web_accessible_resources": [
    "icons/*.png"
  ]

}
